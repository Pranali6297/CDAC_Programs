}

class Polynom
{
	polyNode start;
	
	public void insert(double co,int ex)
	{
		polyNode newnode = new polyNode(co,ex);
		
		if((start==null) ||(ex >start.expo)) // insert first
		{
			newnode.next = start;
			start = newnode;
			return;
		}
		
		polyNode it = start;
		while((it.next!=null)&&(it.next.expo >= ex))
			
	}
	
	
}