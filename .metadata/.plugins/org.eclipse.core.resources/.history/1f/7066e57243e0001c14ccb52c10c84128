package Polynomial;

public class ArithmaticPoly {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}

public class Polynomial{
	polyNode start;
	
	public void insert(float co,int ex)
	{
		polyNode newNode=new polyNode(co, ex);
		
		if(start==null || ex>start.expo) {
			newNode.next=start;
			start=newNode;
			return;
		}
		
		polyNode it=start;
		while(it.next!=null && it.next.expo>=ex) {
			it=it.next;
		}
		
		if(ex==it.expo) {
			it.coeff=it.coeff+co;
			return;
		}
		newNode.next=it.next;
		it.next=newNode;
		return;
	}
	
	//expo merge sort
	public Polynomial polyAdd(Polynomial p2) {
		Polynomial poly3=new Polynomial();
		PolyNode it1=start;
		while(it1!=null) {
			poly3.insert(it1.coef, it1.expo);
			it1=it1.next;
		}
		
		PolyNode it2=p2.start;
		while(it2!=null) {
			poly3.insert(it2.coef, it2.expo);
			it2=it2.next;
		}
		 return poly3;
	}
	
	//Polynomial Multiply
	public Polynomial polyMultiply(Polynomial p2) {
		Polynomial poly3=new Polynomial();
		PolyNode it1=start;
		PolyNode it2=p2.start;
		while(it1!=null) {
			float co=0;
			int expo=0;
			while(it2!=null) {
				co=it1.coef*it2.coef;
				expo=it1.expo+it2.expo;
				poly3.insert(co, expo);
				it2=it2.next;
			}
			it2=p2.start;
			it1=it1.next;
		}
		return poly3;
	}
	
	
	
	
	public void display() {
		if(start==null) {
			System.out.println("Zero Polynomial");
			return;
		}
		PolyNode it=start;
		while(it!=null) {
			System.out.print(it.coef+"x^"+it.expo);
			it=it.next;
			if(it!=null)
				System.out.print(" + ");
			else
				System.out.println();
		}
		return;
	}
}
